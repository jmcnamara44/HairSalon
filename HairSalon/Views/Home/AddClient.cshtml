@{
  Layout = "_Layout";
}
<h2>Add a new client</h2>
<form action="/create-client" method="post">
  <div class="form-group">
    <label for="client-name">Enter client's full name</label>
    <input id="name" name="name" class="form-control" type="text" required>
  </div>
  <div class="form-group">
    <label for="phone-number">Enter client's phone number</label>
    <input id="phone-number" name="phone-number" class="form-control" type="text">
  </div>
  <label for="stylist">Select the stylist this client should be assigned to</label>
  <select class= "form-control" id="stylist-name" name="stylist-name" required>
    <option value="" disabled selected>Select Stylist Name</option>
    @foreach(var stylist in Model)
    {
      <option value="@stylist.GetId()">@stylist.GetName()</option>
    }
  </select>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
